    <!-- Light Switch -->
    <div class="col-md-4" style="opacity: 0.85;">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <span>Light Switch</span>
          </h3>
        </div>

        <div class="panel-body">
          <select class="form-control" id="light">
            <option value="mood">Mood Light</option>
            <option value="bulb">Light Bulb</option>
          </select>

          <div id="mood-light">
            <legend>Control Mood Light</legend>
            <i class="fa fa-home house" aria-hidden="true" id="picker"></i>

            <div class="text-center">
              <button type="submit" class="btn btn-primary" id="save-btn" data-loading-text="Loading...">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> <span data-i18n="save">Save</span>
              </button>

              <button type="button" class="btn btn-danger" id="clear-btn">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <span data-i18n="clear">Clear</span>
              </button> 

              <a href="http://www.w3schools.com/css/" target="_blank" class="btn btn-info">
                <span class="glyphicon glyphicon-info-sign"></span> 
                <span data-i18n="help">Help</span>
              </a>
            </div>
          </div> <!-- Mood light -->

          <div id="light-bulb">
            <legend>Control Light Bulb</legend>
            <i class="fa fa-lightbulb-o" aria-hidden="true" id="led"></i>
          </div>
        </div>
        <div class="panel-footer text-center">
          Copyright &copy; <a href="#">IOT & Robotics Team</a>
        </div>
      </div>
    </div>

    <!-- Door Lock -->
    <div class="col-md-4" style="opacity: 0.85;">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-flash" aria-hidden="true"></span>
            <span>Door Lock</span>
          </h3>
        </div>
        <table class="table table-bordered table-striped table-hover">
          <tbody>
            <tr>
              <td>Kitchen</td>
              <td>
                <label class="switch">
                  <input type="checkbox" checked id="switch1" onchange="doorLock()">
                  <span class="slider round"></span>
                </label>
              </td>
            </tr>
            <tr>
              <td>Living Room</td>
              <td>
                <label class="switch">
                  <input type="checkbox" checked id="switch2" onchange="doorLock()">
                  <span class="slider round"></span>
                </label>
              </td>
            </tr>
            <tr>
              <td>Bedroom</td>
              <td>
                <label class="switch">
                  <input type="checkbox" checked id="switch3" onchange="doorLock()">
                  <span class="slider round"></span>
                </label>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Temperature -->
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-flash" aria-hidden="true"></span>
            <span>Ambient Status</span>
          </h3>
        </div>
        <div class="panel-footer">
          <div id="ChartContainer" style="height: 200px; width:100%;"></div>
        </div>
      </div>
    </div>
    </div>

    <div class="col-md-4" style="opacity: 0.85;">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <span>Weather Indication</span>
          </h3>
        </div>
        <input id="pac-input" class="controls" type="text" placeholder="Search Box">
        <div id="map"></div>
      </div>
  </div>

