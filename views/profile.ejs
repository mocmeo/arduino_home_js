<!doctype html>
<html>
<head>
    <title>Arduino Smart Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/mystyle.css">
    <link rel="stylesheet" type="text/css" href="css/colpick.css">
    <link rel="stylesheet" type="text/css" href="css/particles.css">
    <link rel="stylesheet" type="text/css" href="css/iot-box.css">
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
</head>
<body>
    <div id="particles-js"></div>
    <div id="navbar-placeholder" style="z-index: 10">
        <nav class="navbar navbar-inverse navbar-fixed-top" style="height: 46px;">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a href="#" class="navbar-brand">
                <i class="fa fa-home" aria-hidden="true" id="home"></i> IoT Home
            </a>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav" style="margin-top: 1.5px">
            <li><a href="/">HOME</a></li>
            <li><a href="/dashboard">DASHBOARD</a></li>
            <li><a href="/video">VIDEO STREAMING</a></li>
            <li><a href="#">SETTING</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/profile" class="user">
                <img src="https://<%= user.facebook.picture %>" class="img-circle" width="27"> <%= user.facebook.name %>
            </a>
        </li>
        <li>
          <a href="/logout">
            <span>SIGN OUT</span>
            <i class="fa fa-sign-out" aria-hidden="true"></i>
        </a>
    </li>
</ul>
<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      </a>

              <!-- <ul class="dropdown-menu">
                <li><a href="#">About</a></li>
                <li><a href="#">FAQ</a></li>
                <li><a href="#">Report or suggest</a></li>
            </ul> -->
        </li>
    </ul>
</div>
</div>
</nav>
</div>

<div class="container">
    <div class="row">
     <!-- FACEBOOK INFORMATION -->
     <div class="col-sm-6">
        <div class="well">
            <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
            <p>
                <strong>id</strong>: <%= user.facebook.id %><br>
                <strong>email</strong>: <%= user.facebook.email %><br>
                <strong>name</strong>: <%= user.facebook.name %> <br>
                <strong>picture</strong>: <img src="https://<%= user.facebook.picture %>" width="150" height="150"> 
            </p>

        </div>
    </div>
</div>


<div class="iot-box" id="chat">
    <div class="iot-header" onclick='showHideChat()'>
      <span>IoT Devices</span>  
      <span class="glyphicon glyphicon-ok" id="close_btn"></span>
  </div>
  <div class="iot-body">
      <div id="devices">
        <div>
          <img src="img/esp8266.png" width="50" height="auto">
          <span>ESP8266</span><br>
      </div>
      <div>
          <img src="img/ESP32.png" width="50" height="auto">
          <span>ESP32 - 1</span><br>
      </div>
      <div>
          <img src="img/ESP32.png" width="50" height="auto">
          <span>ESP32 - 2</span><br>
      </div>
      <div>
          <img src="img/ESP32.png" width="50" height="auto">
          <span>ESP32 - 3</span><br>
      </div>
      <div>
          <img src="img/ESP32.png" width="50" height="auto">
          <span>ESP32 - 4</span><br>
      </div>
  </div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/particles.js"></script>
<script src="js/app.js"></script>
<script src="js/iot-box.js"></script>
<script src="js/client.js"></script>

</div>
</body>
</html>